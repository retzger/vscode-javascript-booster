{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["es2015", "es2017"],
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowUnreachableCode": true,
        "rootDir": "./"
    },
    "include": ["./src/**/*", "./tests/**/*", "./typings/**/*"],
    "exclude": ["node_modules", ".vscode-test"]
}
