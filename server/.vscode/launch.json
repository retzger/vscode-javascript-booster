// A launch configuration that compiles the extension and then opens it inside a new window
{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Generate ast-types typings",
            "program": "${workspaceFolder}/typings/generate-ast-typings.js"
        },
        {
            "name": "Attach to Server",
            "type": "node",
            "request": "attach",
            "address": "localhost",
            "protocol": "inspector",
            "port": 6014,
            "sourceMaps": true,
            "trace": "verbose",
            "outFiles": ["${workspaceRoot}/../client/dist/server/**/*.js"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server Tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "cwd": "${workspaceFolder}",
            "args": ["--runInBand"],
            "runtimeArgs": ["--nolazy"],
            "env": {
                "NODE_ENV": "development"
            },
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server Tests [Selected]",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "cwd": "${workspaceFolder}",
            "args": ["--runInBand", "-t=${selectedText}"],
            "runtimeArgs": ["--nolazy"],
            "env": {
                "NODE_ENV": "development"
            },
            "sourceMaps": true
        }
    ]
}
